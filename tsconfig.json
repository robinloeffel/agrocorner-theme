{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noPropertyAccessFromIndexSignature": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "paths": {
      "$utils": ["./source/ts/utils.ts"],
      "$modules/*": ["./source/modules/*"]
    }
  }
}
